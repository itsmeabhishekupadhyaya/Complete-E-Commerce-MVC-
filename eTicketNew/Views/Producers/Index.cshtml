@model  IEnumerable<Producer>
@{ 
    ViewData["Title"] = "List of Actor Producers";
}

<div class="row">
    <div class="col-md-8 offset-2" >
        <table class="table">
            <thead class="text-center">
            <th>@Html.DisplayNameFor(m => m.ProfilePrictureUrl)</th>
            <th>@Html.DisplayNameFor(m => m.FullName)</th>
            <th>@Html.DisplayNameFor(m => m.Bio)</th>
            <th></th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="text-center">
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.ProfilePrictureUrl" alt="@item.FullName" style="max-widht:100px" />
                    </td>
                    <td class="align-middle">@Html.DisplayFor(m => item.FullName)</td>
                    <td class="align-middle">@Html.DisplayFor(m => item.Bio)</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencile-square"></i>Edit</a>|
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Detail</a>|
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                   
                </tr>
                }
            </tbody>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>

</div>