@model IEnumerable<Actor>

@{
    ViewData["Title"] = "List of Actor Screen";
}

<div class="row">
    <div class="col-md-8 offset-2">

        <table class="table">
            <thead>
                <th>@Html.DisplayNameFor(model => model.ProfilePrictureUrl)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.Bio)</th>
                <th>Action</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src=@item.ProfilePrictureUrl alt="@item.FullName" style="max-width:150px" />
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(Model=>item.FullName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(Model => item.Bio)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>|
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>|
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                    </td>

                </tr>
                }
            </tbody>
           
        </table>

    </div>

</div>
