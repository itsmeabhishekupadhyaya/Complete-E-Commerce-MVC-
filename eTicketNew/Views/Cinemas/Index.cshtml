@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List Of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead class="text-center">
            <th>@Html.DisplayNameFor(m => m.Logo)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th></th>
            </thead>
            <tbody class="text-center">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Logo" style="max-width:100px" />
                        </td>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Description)</td>
                        <td>
                            <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@item.Id"><i class="bi bi-pencile-square"> Edit</i></a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"> Details</i></a> |

                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"> Delete</i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("_CreateItems", "Cinemas")